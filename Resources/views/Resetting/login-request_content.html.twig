<form action="{{ path('fos_user_resetting_send_email') }}" id="reset" method="POST" class="fos_user_resetting_request">
    <div id="forgot-inner">
        <table border="0" cellpadding="0" cellspacing="0">
            <tr>
                <th>Username</th>
                <td><input type="text" id="username" name="username" class="login-inp" /></td>
            </tr>
            <tr>
                <th> </th>
                <td><input type="button" class="submit-login" value="{{ 'resetting.request.submit'|trans({}, 'FOSUserBundle') }}"/></td>
            </tr>
        </table>
    </div>
</form>
